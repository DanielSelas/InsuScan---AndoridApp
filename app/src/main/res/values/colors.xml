<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="black">#FF000000</color>
    <color name="white">#FFFFFFFF</color>

    <!-- ==================== Primary Colors ==================== -->
    <!-- Main brand color - medical blue for trust and professionalism -->
    <color name="primary">#2196F3</color>
    <color name="primary_dark">#1976D2</color>
    <color name="primary_light">#BBDEFB</color>
    <color name="primary_very_light">#E3F2FD</color>

    <!-- ==================== Secondary Colors ==================== -->
    <!-- Health green for success and normal values -->
    <color name="secondary">#4CAF50</color>
    <color name="secondary_dark">#388E3C</color>
    <color name="secondary_light">#C8E6C9</color>

    <!-- ==================== Status Colors ==================== -->
    <!-- Critical for medical status indicators -->
    <color name="status_normal">#4CAF50</color>     <!-- Green: glucose in range -->
    <color name="status_warning">#FF9800</color>    <!-- Orange: slightly high -->
    <color name="status_critical">#F44336</color>   <!-- Red: dangerously high/low -->
    <color name="status_info">#2196F3</color>       <!-- Blue: informational -->
    <color name="status_error">@color/status_critical</color>

    <!-- ==================== Background Colors ==================== -->
    <color name="background">#FAFAFA</color>              <!-- Main app background -->
    <color name="surface">#FFFFFF</color>                 <!-- Card/container surface -->
    <color name="background_secondary">#F5F5F5</color>   <!-- Alternative background -->

    <!-- ==================== Text Colors ==================== -->
    <color name="text_primary">#212121</color>      <!-- Main text - dark for readability -->
    <color name="text_secondary">#757575</color>    <!-- Secondary text - medium gray -->
    <color name="text_disabled">#BDBDBD</color>     <!-- Disabled text - light gray -->
    <color name="text_on_primary">#FFFFFF</color>   <!-- White text on colored backgrounds -->
    <color name="text_hint">#9E9E9E</color>         <!-- Hint text in inputs -->

    <!-- ==================== Divider & Border Colors ==================== -->
    <color name="divider">#E0E0E0</color>           <!-- Standard divider -->
    <color name="divider_light">#F0F0F0</color>     <!-- Lighter divider -->
    <color name="divider_warm">#E8E8E8</color>      <!-- Warm-toned divider -->
    <color name="border">#E0E0E0</color>            <!-- Input borders -->

    <!-- ==================== Semantic Colors ==================== -->
    <color name="error">#F44336</color>             <!-- Error messages -->
    <color name="success">#4CAF50</color>           <!-- Success messages -->
    <color name="warning">#FF9800</color>           <!-- Warning messages -->
    <color name="info">#2196F3</color>              <!-- Info messages -->

    <!-- ==================== Special Use Colors ==================== -->
    <color name="overlay_dark">#99000000</color>    <!-- Semi-transparent black overlay -->
    <color name="overlay_light">#33000000</color>   <!-- Light black overlay -->
    <color name="ripple">#20000000</color>          <!-- Ripple effect on clicks -->
    <color name="transparent">#00000000</color>     <!-- Fully transparent -->

    <!-- ==================== Specific Component Colors ==================== -->
    <color name="dose_badge">@color/primary</color>       <!-- Insulin dose badge -->
    <color name="relevance_badge">@color/secondary</color>   <!-- Relevance indicator -->
    <color name="activity_indicator">@color/warning</color>

    <!-- ==================== Warning box colors ==================== -->
    <color name="warning_background">#FFF3E0</color>
    <color name="warning_text_dark">#E65100</color> <!-- Activity level indicator -->

    <!-- ==================== Loading overlay (semi-transparent white) ==================== -->
    <color name="overlay_white">#80FFFFFF</color>

    <!-- ==================== Profile dividers (light gray) ==================== -->
    <color name="divider_profile">#EEEEEE</color>

</resources>