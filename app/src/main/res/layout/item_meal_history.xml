<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_item_meal_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Meal Title"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/tv_item_meal_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:30"
                android:textSize="12sp"
                android:textColor="#999999" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_meal_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carbs: 0g | Insulin: 0u"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_item_sick_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ¤’ Sick mode"
                android:textSize="12sp"
                android:textColor="#E65100"
                android:visibility="gone"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_item_stress_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ˜° High stress"
                android:textSize="12sp"
                android:textColor="#D32F2F"
                android:visibility="gone"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_item_glucose_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ©¸ Glucose: --"
                android:textSize="12sp"
                android:textColor="#1976D2"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>