<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select the best match"
        android:textSize="@dimen/text_h2"
        android:textStyle="bold"
        android:textColor="@color/text_primary" />

    <TextView
        android:id="@+id/tv_search_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Results for: "
        android:textSize="@dimen/text_body2"
        android:textColor="@color/text_secondary"
        android:layout_marginTop="@dimen/spacing_xs"
        android:layout_marginBottom="@dimen/spacing_medium" />

    <!-- Options RadioGroup -->
    <RadioGroup
        android:id="@+id/radio_group_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/option_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@drawable/radio_item_background"
            android:layout_marginBottom="8dp"
            android:textSize="14sp"
            android:textColor="#333333" />

        <RadioButton
            android:id="@+id/option_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@drawable/radio_item_background"
            android:layout_marginBottom="8dp"
            android:textSize="14sp"
            android:textColor="#333333" />

        <RadioButton
            android:id="@+id/option_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@drawable/radio_item_background"
            android:layout_marginBottom="8dp"
            android:textSize="14sp"
            android:textColor="#333333" />

    </RadioGroup>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginBottom="@dimen/spacing_medium" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Can't find it? Enter manually"
        android:textSize="@dimen/text_caption"
        android:textColor="@color/text_secondary" />

    <Button
        android:id="@+id/btn_manual_entry"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height_small"
        android:layout_marginTop="@dimen/spacing_small"
        android:text="ðŸ“ Manual Entry"
        android:textSize="@dimen/text_caption"
        android:textAllCaps="false"
        style="@style/Widget.Material3.Button.TextButton" />

</LinearLayout>
