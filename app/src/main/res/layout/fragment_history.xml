<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <include
        android:id="@+id/top_bar"
        layout="@layout/view_top_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_history_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/history_meal_history"
        android:textSize="@dimen/text_h2"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginStart="@dimen/spacing_medium"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/btn_filter_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_filter_button"
        android:paddingHorizontal="@dimen/spacing_medium"
        android:paddingVertical="@dimen/spacing_small"
        android:layout_marginEnd="@dimen/spacing_medium"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@+id/tv_history_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_history_title">

        <ImageView
            android:layout_width="@dimen/icon_standard"
            android:layout_height="@dimen/icon_standard"
            android:src="@android:drawable/ic_menu_my_calendar"
            app:tint="@color/primary"
            android:layout_marginEnd="@dimen/spacing_small"/>

        <TextView
            android:id="@+id/tv_filter_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/history_filter"
            android:textColor="@color/primary"
            android:textSize="@dimen/text_body2"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/btn_clear_filter"
        android:layout_width="@dimen/icon_large"
        android:layout_height="@dimen/icon_large"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/spacing_small"
        app:tint="#757575"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/spacing_xs"
        app:layout_constraintEnd_toStartOf="@id/btn_filter_container"
        app:layout_constraintTop_toTopOf="@id/btn_filter_container"
        app:layout_constraintBottom_toBottomOf="@id/btn_filter_container"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_latest_meal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_medium"
        android:layout_marginTop="@dimen/spacing_medium"
        app:cardCornerRadius="@dimen/corner_radius_card"
        app:cardElevation="@dimen/elevation_card"
        app:cardBackgroundColor="@color/surface"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tv_history_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_card">

            <TextView
                android:id="@+id/tv_latest_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/history_recent"
                android:textColor="@color/primary"
                android:textSize="@dimen/text_caption"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_latest_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19:24"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_caption"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_latest_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Meal Name"
                android:textSize="@dimen/text_h3"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="@dimen/spacing_small"
                app:layout_constraintTop_toBottomOf="@id/tv_latest_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tv_latest_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="45g carbs | 6.5 units"
                android:textSize="@dimen/text_body2"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="@dimen/spacing_xs"
                app:layout_constraintTop_toBottomOf="@id/tv_latest_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_previous_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previous Meals"
        android:textSize="@dimen/text_body2"
        android:textColor="@color/text_hint"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/spacing_medium"
        android:layout_marginTop="@dimen/spacing_medium"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/card_latest_meal"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_meal_history"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginHorizontal="@dimen/spacing_medium"
        android:clipToPadding="false"
        android:paddingBottom="80dp"
        app:layout_constraintTop_toBottomOf="@id/tv_previous_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/layout_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tv_history_title"
        app:layout_constraintBottom_toTopOf="@id/btn_scan_next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ½ï¸"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/tv_empty_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/history_no_meals"
            android:textSize="15sp"
            android:textColor="#999999"
            android:textAlignment="center"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_scan_next"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height_large"
        android:layout_marginHorizontal="@dimen/spacing_medium"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:text="@string/scan_take_photo"
        android:textColor="@color/text_on_primary"
        android:background="@drawable/button_primary"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>