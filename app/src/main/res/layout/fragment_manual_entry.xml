<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Top bar -->
    <include
        android:id="@+id/top_bar"
        layout="@layout/view_top_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Search card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginHorizontal="@dimen/spacing_medium"
        app:cardCornerRadius="@dimen/corner_radius_card"
        app:cardElevation="@dimen/elevation_card"
        app:cardBackgroundColor="@color/surface"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_input_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_add_food_title"
                android:textSize="@dimen/text_body2"
                android:textStyle="bold"
                android:textColor="@color/text_secondary" />

            <!-- Input row: Food name + Weight + Add button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/spacing_small"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/et_food_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/hint_meal_name"
                    android:inputType="text"
                    android:padding="@dimen/padding_input_horizontal"
                    android:background="@drawable/edit_text_rounded"
                    android:imeOptions="actionNext" />

                <EditText
                    android:id="@+id/et_weight"
                    android:layout_width="@dimen/input_width_weight"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_small"
                    android:hint="g"
                    tools:text="100"
                    android:inputType="number"
                    android:padding="@dimen/padding_input_horizontal"
                    android:gravity="center"
                    android:background="@drawable/edit_text_rounded"
                    android:imeOptions="actionDone" />

                <Button
                    android:id="@+id/btn_add_food"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/input_height_single"
                    android:layout_marginStart="@dimen/spacing_small"
                    android:text="@string/action_add"
                    android:textColor="@color/text_on_primary"
                    android:background="@drawable/button_primary"
                    android:textAllCaps="false"
                    android:paddingHorizontal="@dimen/spacing_medium" />

            </LinearLayout>

            <!-- Searching indicator -->
            <LinearLayout
                android:id="@+id/layout_searching"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/spacing_small"
                android:visibility="gone">

                <ProgressBar
                    android:id="@+id/searching_indicator"
                    android:layout_width="@dimen/icon_standard"
                    android:layout_height="@dimen/icon_standard"
                    style="?android:attr/progressBarStyleSmall"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_searching"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_small"
                    android:text="@string/manual_searching_usda"
                    android:textSize="@dimen/text_caption"
                    android:textColor="@color/primary_dark"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Autocomplete suggestions -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_autocomplete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                app:cardCornerRadius="@dimen/corner_radius_input"
                app:cardElevation="@dimen/elevation_card"
                android:visibility="gone">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_autocomplete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="@dimen/meal_image_height"
                    android:background="@color/surface"
                    android:nestedScrollingEnabled="true" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Food items header -->
    <TextView
        android:id="@+id/tv_items_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/manual_food_items"
        android:textSize="@dimen/text_h3"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginStart="@dimen/spacing_medium"
        app:layout_constraintTop_toBottomOf="@id/card_search"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Empty state -->
    <TextView
        android:id="@+id/tv_empty_state"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/manual_no_items"
        android:textSize="@dimen/text_body2"
        android:textColor="@color/text_hint"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_marginHorizontal="@dimen/spacing_large"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tv_items_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Food items list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_food_items"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginHorizontal="@dimen/spacing_medium"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/spacing_small"
        app:layout_constraintTop_toBottomOf="@id/tv_items_header"
        app:layout_constraintBottom_toTopOf="@id/card_total"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Total carbs card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_medium"
        android:layout_marginBottom="@dimen/spacing_small"
        app:cardCornerRadius="@dimen/corner_radius_card"
        app:cardElevation="@dimen/elevation_card"
        app:cardBackgroundColor="@color/primary_very_light"
        app:layout_constraintBottom_toTopOf="@id/layout_buttons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_card"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/nutrition_carbs"
                android:textSize="@dimen/text_body1"
                android:textColor="@color/primary_dark" />

            <TextView
                android:id="@+id/tv_total_carbs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0g"
                android:textSize="@dimen/text_h1"
                android:textStyle="bold"
                android:textColor="@color/primary" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Bottom buttons -->
    <LinearLayout
        android:id="@+id/layout_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_card"
        android:background="@color/surface"
        android:elevation="@dimen/elevation_card_raised"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_rescan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/spacing_small"
            android:text="@string/action_rescan"
            android:textAllCaps="false"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/spacing_small"
            android:text="@string/scan_save"
            android:textColor="@color/text_on_primary"
            android:background="@drawable/button_primary"
            android:textAllCaps="false" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>