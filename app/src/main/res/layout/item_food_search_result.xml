<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/spacing_medium"
    android:background="?attr/selectableItemBackground">

    <!-- Left side: Food info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_food_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Food name"
            android:textSize="@dimen/text_body1"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Match reason (AI explanation) -->
        <TextView
            android:id="@+id/tv_match_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Match reason"
            android:textSize="@dimen/text_caption"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="@dimen/spacing_xxs"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_food_carbs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="25g carbs per 100g"
            android:textSize="@dimen/text_caption"
            android:textColor="@color/primary"
            android:layout_marginTop="@dimen/spacing_xxs" />

    </LinearLayout>

    <!-- Right side: Relevance score badge -->
    <TextView
        android:id="@+id/tv_relevance_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="95%"
        android:textSize="@dimen/text_caption"
        android:textStyle="bold"
        android:textColor="@color/text_on_primary"
        android:background="@drawable/badge_relevance"
        android:paddingHorizontal="@dimen/spacing_small"
        android:paddingVertical="@dimen/spacing_xs"
        android:layout_marginStart="@dimen/spacing_small"
        android:layout_gravity="center_vertical"
        android:visibility="gone" />

</LinearLayout>