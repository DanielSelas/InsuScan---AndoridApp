<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground">

    <!-- Left side: Food info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_food_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Food name"
            android:textSize="15sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Match reason (AI explanation) -->
        <TextView
            android:id="@+id/tv_match_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Match reason"
            android:textSize="11sp"
            android:textColor="#666666"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_food_carbs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25g carbs per 100g"
            android:textSize="12sp"
            android:textColor="#1976D2"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- Right side: Relevance score badge -->
    <TextView
        android:id="@+id/tv_relevance_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="95%"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/badge_relevance"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:layout_marginStart="8dp"
        android:layout_gravity="center_vertical"
        android:visibility="gone" />

</LinearLayout>