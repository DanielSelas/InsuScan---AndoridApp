<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Top bar -->
    <include
        android:id="@+id/top_bar"
        layout="@layout/view_top_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/profile_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_save_profile">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ============== PROFILE HEADER ============== -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <!-- Profile photo -->
                    <ImageView
                        android:id="@+id/iv_profile_photo"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/ic_person"
                        android:background="@drawable/circle_background"
                        android:padding="16dp"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <!-- Name -->
                        <EditText
                            android:id="@+id/et_user_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Your name"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:inputType="textPersonName"
                            android:background="@android:color/transparent" />

                        <!-- Email (read-only) -->
                        <TextView
                            android:id="@+id/tv_user_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="email@example.com"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ============== PERSONAL INFO ============== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‘¤ Personal Info"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#666666"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="4dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Age -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Age"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/et_user_age"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:hint="30"
                            android:inputType="number"
                            android:textAlignment="center"
                            android:background="@drawable/edit_text_background" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEEEEE"
                        android:layout_marginVertical="12dp" />

                    <!-- Gender -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Gender"
                            android:textSize="16sp" />

                        <Spinner
                            android:id="@+id/spinner_gender"
                            android:layout_width="150dp"
                            android:layout_height="48dp"
                            android:background="@drawable/spinner_background" />
                    </LinearLayout>

                    <!-- Pregnancy (visible only for females) -->
                    <LinearLayout
                        android:id="@+id/layout_pregnancy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#EEEEEE"
                            android:layout_marginVertical="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Currently pregnant?"
                                android:textSize="16sp" />

                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/switch_pregnant"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <!-- Due date (visible only if pregnant) -->
                        <LinearLayout
                            android:id="@+id/layout_due_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="12dp"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Due date"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_due_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Select date"
                                android:textColor="#1976D2"
                                android:padding="8dp"
                                android:background="@drawable/edit_text_background" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ============== MEDICAL INFO ============== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ¥ Medical Info"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#666666"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="4dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Diabetes Type -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Diabetes type"
                            android:textSize="16sp" />

                        <Spinner
                            android:id="@+id/spinner_diabetes_type"
                            android:layout_width="150dp"
                            android:layout_height="48dp"
                            android:background="@drawable/spinner_background" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEEEEE"
                        android:layout_marginVertical="12dp" />

                    <!-- Insulin Type -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Insulin type"
                            android:textSize="16sp" />

                        <Spinner
                            android:id="@+id/spinner_insulin_type"
                            android:layout_width="150dp"
                            android:layout_height="48dp"
                            android:background="@drawable/spinner_background" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ============== INSULIN PARAMETERS ============== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’‰ Insulin Parameters"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#666666"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="4dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- ICR -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Carb Ratio (ICR)"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1 unit per X grams"
                                android:textSize="12sp"
                                android:textColor="#999999" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/edit_text_background"
                            android:gravity="center_vertical"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1 :"
                                android:textSize="16sp"
                                android:textColor="#000000"
                                android:layout_marginEnd="4dp"/>

                            <EditText
                                android:id="@+id/et_insulin_carb_ratio"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:hint="10"
                                android:inputType="number"
                                android:textAlignment="viewStart"
                                android:background="@android:color/transparent"
                                android:padding="8dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEEEEE"
                        android:layout_marginVertical="12dp" />

                    <!-- ISF -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Correction Factor (ISF)"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_isf_subtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="mg/dL drop per 1 unit"
                                android:textSize="12sp"
                                android:textColor="#999999" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/et_correction_factor"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:hint="50"
                            android:inputType="number"
                            android:textAlignment="center"
                            android:background="@drawable/edit_text_background" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEEEEE"
                        android:layout_marginVertical="12dp" />

                    <!-- Target Glucose -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Target Glucose"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_target_subtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="mg/dL"
                                android:textSize="12sp"
                                android:textColor="#999999" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/et_target_glucose"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:hint="100"
                            android:inputType="number"
                            android:textAlignment="center"
                            android:background="@drawable/edit_text_background" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEEEEE"
                        android:layout_marginVertical="12dp" />

                    <!-- Active Insulin Time -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Active Insulin Time"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Auto-set by insulin type"
                                android:textSize="12sp"
                                android:textColor="#999999" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_active_insulin_time"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="4h"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:textColor="#666666" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ============== SYRINGE SETTINGS ============== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’‰ Syringe Settings"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#666666"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="4dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Syringe Size -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Syringe size"
                            android:textSize="16sp" />

                        <Spinner
                            android:id="@+id/spinner_syringe_size"
                            android:layout_width="120dp"
                            android:layout_height="48dp"
                            android:background="@drawable/spinner_background" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEEEEE"
                        android:layout_marginVertical="12dp" />

                    <!-- Dose Rounding -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Dose rounding"
                            android:textSize="16sp" />

                        <Spinner
                            android:id="@+id/spinner_dose_rounding"
                            android:layout_width="120dp"
                            android:layout_height="48dp"
                            android:background="@drawable/spinner_background" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ============== ADJUSTMENT FACTORS ============== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âš¡ Adjustment Factors"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#666666"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="4dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Sick Day -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ¤’ Sick day increase"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/et_sick_adjustment"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:hint="15"
                            android:inputType="number"
                            android:textAlignment="center"
                            android:background="@drawable/edit_text_background" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="%"
                            android:textSize="16sp"
                            android:layout_marginStart="4dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEEEEE"
                        android:layout_marginVertical="12dp" />

                    <!-- Stress -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ˜° Stress increase"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/et_stress_adjustment"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:hint="10"
                            android:inputType="number"
                            android:textAlignment="center"
                            android:background="@drawable/edit_text_background" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="%"
                            android:textSize="16sp"
                            android:layout_marginStart="4dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEEEEE"
                        android:layout_marginVertical="12dp" />

                    <!-- Light Exercise -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸƒ Light exercise decrease"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/et_light_exercise_adjustment"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:hint="15"
                            android:inputType="number"
                            android:textAlignment="center"
                            android:background="@drawable/edit_text_background" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="%"
                            android:textSize="16sp"
                            android:layout_marginStart="4dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEEEEE"
                        android:layout_marginVertical="12dp" />

                    <!-- Intense Exercise -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ‹ï¸ Intense exercise decrease"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/et_intense_exercise_adjustment"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:hint="30"
                            android:inputType="number"
                            android:textAlignment="center"
                            android:background="@drawable/edit_text_background" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="%"
                            android:textSize="16sp"
                            android:layout_marginStart="4dp" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ============== PREFERENCES ============== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âš™ï¸ Preferences"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#666666"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="4dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Glucose Units -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Glucose units"
                            android:textSize="16sp" />

                        <Spinner
                            android:id="@+id/spinner_glucose_units"
                            android:layout_width="120dp"
                            android:layout_height="48dp"
                            android:background="@drawable/spinner_background" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Save Button -->
    <Button
        android:id="@+id/btn_save_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ðŸ’¾ Save Changes"
