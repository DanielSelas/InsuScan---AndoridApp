<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Top bar -->
    <include
        android:id="@+id/top_bar"
        layout="@layout/view_top_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/profile_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_save_profile">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_card">

            <!-- ============== PROFILE HEADER ============== -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                app:cardCornerRadius="@dimen/corner_radius_card"
                app:cardElevation="@dimen/elevation_card"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_card"
                    android:gravity="center_vertical">

                    <!-- Profile photo with edit button -->
                    <FrameLayout
                        android:layout_width="@dimen/progress_size_large"
                        android:layout_height="@dimen/progress_size_large">

                        <ImageView
                            android:id="@+id/iv_profile_photo"
                            android:layout_width="@dimen/progress_size_large"
                            android:layout_height="@dimen/progress_size_large"
                            android:src="@drawable/ic_person"
                            android:background="@drawable/circle_background"
                            android:padding="@dimen/spacing_medium"
                            android:scaleType="centerCrop" />

                        <!-- Camera icon overlay -->
                        <ImageView
                            android:id="@+id/iv_edit_photo"
                            android:layout_width="@dimen/icon_standard"
                            android:layout_height="@dimen/icon_standard"
                            android:layout_gravity="bottom|end"
                            android:src="@drawable/ic_camera"
                            android:background="@drawable/circle_background_primary"
                            android:padding="@dimen/spacing_xs"
                            android:elevation="@dimen/elevation_card" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/spacing_medium">

                        <!-- Name -->
                        <EditText
                            android:id="@+id/et_user_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/hint_your_name"
                            android:textSize="@dimen/text_h3"
                            android:textStyle="bold"
                            android:inputType="textPersonName"
                            android:background="@android:color/transparent" />

                        <!-- Email (read-only) -->
                        <TextView
                            android:id="@+id/tv_user_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="email@example.com"
                            android:textSize="@dimen/text_body2"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="@dimen/spacing_xs" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ============== PERSONAL INFO ============== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_personal_info"
                android:textSize="@dimen/text_body2"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="@dimen/spacing_small"
                android:layout_marginStart="@dimen/spacing_xs" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                app:cardCornerRadius="@dimen/corner_radius_card"
                app:cardElevation="@dimen/elevation_card"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_card">

                    <!-- Age -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/profile_label_age"
                            android:textSize="@dimen/text_body1" />

                        <EditText
                            android:id="@+id/et_user_age"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            tools:hint="30"
                            android:inputType="number"
                            android:textAlignment="center"
                            android:background="@drawable/edit_text_background" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_height"
                        android:background="@color/divider"
                        android:layout_marginVertical="@dimen/spacing_medium" />

                    <!-- Gender -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/profile_gender"
                            android:textSize="@dimen/text_body1" />

                        <Spinner
                            android:id="@+id/spinner_gender"
                            android:layout_width="150dp"
                            android:layout_height="48dp"
                            android:background="@drawable/spinner_background" />
                    </LinearLayout>

                    <!-- Pregnancy (visible only for females) -->
                    <LinearLayout
                        android:id="@+id/layout_pregnancy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/divider_height"
                            android:background="@color/divider_profile"
                            android:layout_marginVertical="@dimen/padding_input_horizontal"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/profile_pregnant_question"
                                android:textSize="@dimen/text_body1" />

                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/switch_pregnant"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <!-- Due date (visible only if pregnant) -->
                        <LinearLayout
                            android:id="@+id/layout_due_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="@dimen/padding_input_horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/profile_due_date"
                                android:textSize="@dimen/text_body1" />

                            <TextView
                                android:id="@+id/tv_due_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/action_select_date"
                                android:textColor="@color/primary_dark"
                                android:padding="@dimen/spacing_small"
                                android:background="@drawable/edit_text_background" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ============== MEDICAL INFO ============== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_medical_info"
                android:textSize="@dimen/text_body2"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="@dimen/spacing_small"
                android:layout_marginStart="@dimen/spacing_xs" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                app:cardCornerRadius="@dimen/corner_radius_card"
                app:cardElevation="@dimen/elevation_card"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_card">

                    <!-- Diabetes Type -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/profile_diabetes_type"
                            android:textSize="@dimen/text_body1" />

                        <Spinner
                            android:id="@+id/spinner_diabetes_type"
                            android:layout_width="150dp"
                            android:layout_height="48dp"
                            android:background="@drawable/spinner_background" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_height"
                        android:background="@color/divider_profile"
                        android:layout_marginVertical="@dimen/padding_input_horizontal" />

                    <!-- Insulin Type -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/profile_insulin_type"
                            android:textSize="@dimen/text_body1" />

                        <Spinner
                            android:id="@+id/spinner_insulin_type"
                            android:layout_width="150dp"
                            android:layout_height="48dp"
                            android:background="@drawable/spinner_background" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ============== INSULIN PARAMETERS ============== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_insulin_parameters"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="@dimen/spacing_small"
                android:layout_marginStart="@dimen/spacing_xs" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                app:cardCornerRadius="@dimen/corner_radius_card"
                app:cardElevation="@dimen/elevation_card"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_card">

                    <!-- ICR -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/profile_icr"
                                android:textSize="@dimen/text_body1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/profile_icr_desc"
                                android:textSize="@dimen/text_caption"
                                android:textColor="@color/text_hint" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/edit_text_background"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/spacing_small"
                            android:paddingEnd="@dimen/spacing_small">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="1 :"
                                android:textSize="@dimen/text_body1"
                                android:textColor="@color/text_primary"
                                android:layout_marginEnd="4dp"/>

                            <EditText
                                android:id="@+id/et_insulin_carb_ratio"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:hint="10"
                                android:inputType="number"
                                android:textAlignment="viewStart"
                                android:background="@android:color/transparent"
                                android:padding="8dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_height"
                        android:background="@color/divider_profile"
                        android:layout_marginVertical="@dimen/padding_input_horizontal" />

                    <!-- ISF -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/profile_isf"
                                android:textSize="@dimen/text_body1" />

                            <TextView
                                android:id="@+id/tv_isf_subtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/profile_isf_desc"
                                android:textSize="@dimen/text_caption"
                                android:textColor="@color/text_hint" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/et_correction_factor"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:hint="50"
                            android:inputType="number"
                            android:textAlignment="center"
                            android:background="@drawable/edit_text_background" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_height"
                        android:background="@color/divider_profile"
                        android:layout_marginVertical="@dimen/padding_input_horizontal" />

                    <!-- Target Glucose -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/profile_target_glucose"
                                android:textSize="@dimen/text_body1" />

                            <TextView
                                android:id="@+id/tv_target_subtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/unit_mgdl"
                                android:textSize="@dimen/text_caption"
                                android:textColor="@color/text_hint" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/et_target_glucose"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:hint="100"
                            android:inputType="number"
                            android:textAlignment="center"
                            android:background="@drawable/edit_text_background" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_height"
                        android:background="@color/divider"
                        android:layout_marginVertical="@dimen/spacing_medium" />

                    <!-- Active Insulin Time -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/profile_active_insulin_time"
                                android:textSize="@dimen/text_body1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/profile_active_insulin_auto"
                                android:textSize="@dimen/text_caption"
                                android:textColor="@color/text_hint" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_active_insulin_time"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            tools:text="4h"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_body1"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ============== REFERENCE OBJECT SETTINGS ============== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_reference_object"
                android:textSize="@dimen/text_body2"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="@dimen/spacing_small"
                android:layout_marginStart="@dimen/spacing_xs" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                app:cardCornerRadius="@dimen/corner_radius_card"
                app:cardElevation="@dimen/elevation_card"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_card">

                    <!-- Reference Type -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/profile_object_type"
                            android:textSize="@dimen/text_body1" />

                        <Spinner
                            android:id="@+id/spinner_reference_type"
                            android:layout_width="160dp"
                            android:layout_height="48dp"
                            android:background="@drawable/spinner_background" />
                    </LinearLayout>

                    <!-- Custom Length (Visible only for 'Other') -->
                    <LinearLayout
                        android:id="@+id/layout_custom_length"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/divider_height"
                            android:background="@color/divider_profile"
                            android:layout_marginVertical="@dimen/padding_input_horizontal" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/profile_length_cm"
                                android:textSize="@dimen/text_body1" />

                            <EditText
                                android:id="@+id/et_custom_length"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:hint="15.0"
                                android:inputType="numberDecimal"
                                android:textAlignment="center"
                                android:background="@drawable/edit_text_background" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/unit_cm"
                                android:textSize="@dimen/text_body1"
                                android:layout_marginStart="@dimen/spacing_small" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/profile_reference_hint"
                            android:textSize="@dimen/text_caption"
                            android:textColor="@color/text_hint"
                            android:layout_marginTop="@dimen/spacing_xs" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_height"
                        android:background="@color/divider_profile"
                        android:layout_marginVertical="@dimen/padding_input_horizontal" />

                    <!-- Dose Rounding -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/profile_dose_rounding"
                            android:textSize="@dimen/text_body1" />

                        <Spinner
                            android:id="@+id/spinner_dose_rounding"
                            android:layout_width="120dp"
                            android:layout_height="48dp"
                            android:background="@drawable/spinner_background" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ============== ADJUSTMENT FACTORS ============== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_adj_factors"
                android:textSize="@dimen/text_body2"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="@dimen/spacing_small"
                android:layout_marginStart="@dimen/spacing_xs" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                app:cardCornerRadius="@dimen/corner_radius_card"
                app:cardElevation="@dimen/elevation_card"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_card">

                    <!-- Sick Day -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/profile_adj_sick"
                            android:textSize="@dimen/text_body1" />

                        <EditText
                            android:id="@+id/et_sick_adjustment"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:hint="15"
                            android:inputType="number"
                            android:textAlignment="center"
                            android:background="@drawable/edit_text_background" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/unit_percent"
                            android:textSize="@dimen/text_body1"
                            android:layout_marginStart="@dimen/spacing_xs" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_height"
                        android:background="@color/divider_profile"
                        android:layout_marginVertical="@dimen/padding_input_horizontal" />

                    <!-- Stress -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/profile_adj_stress"
                            android:textSize="@dimen/text_body1" />

                        <EditText
                            android:id="@+id/et_stress_adjustment"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:hint="10"
                            android:inputType="number"
                            android:textAlignment="center"
                            android:background="@drawable/edit_text_background" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/unit_percent"
                            android:textSize="@dimen/text_body1"
                            android:layout_marginStart="@dimen/spacing_xs" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_height"
                        android:background="@color/divider_profile"
                        android:layout_marginVertical="@dimen/padding_input_horizontal" />

                    <!-- Light Exercise -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/profile_adj_exercise_decrease"
                            android:textSize="@dimen/text_body1" />

                        <EditText
                            android:id="@+id/et_light_exercise_adjustment"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:hint="15"
                            android:inputType="number"
                            android:textAlignment="center"
                            android:background="@drawable/edit_text_background" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/unit_percent"
                            android:textSize="@dimen/text_body1"
                            android:layout_marginStart="@dimen/spacing_xs" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_height"
                        android:background="@color/divider_profile"
                        android:layout_marginVertical="@dimen/padding_input_horizontal" />

                    <!-- Intense Exercise -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/profile_adj_intense_exercise"
                            android:textSize="@dimen/text_body1" />

                        <EditText
                            android:id="@+id/et_intense_exercise_adjustment"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:hint="30"
                            android:inputType="number"
                            android:textAlignment="center"
                            android:background="@drawable/edit_text_background" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/unit_percent"
                            android:textSize="@dimen/text_body1"
                            android:layout_marginStart="@dimen/spacing_xs" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ============== UNITS ============== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_units_section"
                android:textSize="@dimen/text_body2"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="@dimen/spacing_small"
                android:layout_marginStart="@dimen/spacing_xs" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_card">

                    <!-- Glucose Units -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/profile_units_glucose"
                            android:textSize="@dimen/text_body1" />

                        <Spinner
                            android:id="@+id/spinner_glucose_units"
                            android:layout_width="120dp"
                            android:layout_height="48dp"
                            android:background="@drawable/spinner_background" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Save Button -->
    <Button
        android:id="@+id/btn_save_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/action_save_changes"
        android:textAllCaps="false"
        android:layout_marginHorizontal="@dimen/spacing_medium"
        android:layout_marginBottom="@dimen/spacing_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_logout" />

    <!-- Logout Button -->
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/action_logout"
        android:textAllCaps="false"
        android:backgroundTint="@color/error"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="@dimen/spacing_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Loading Indicator -->
    <FrameLayout
        android:id="@+id/loading_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overlay_dark"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateTint="@color/white" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>