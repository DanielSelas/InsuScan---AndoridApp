<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Compact Header -->
        <LinearLayout
            android:id="@+id/layout_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="?attr/selectableItemBackground">

            <!-- Top Row: Title + Dose Badge -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Meal Title -->
                    <TextView
                        android:id="@+id/tv_meal_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Banana, Apple"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/text_primary"
                        android:letterSpacing="0.01"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <!-- NEW: Subtitle with context -->
                    <TextView
                        android:id="@+id/tv_meal_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        tools:text="Good glucose â€¢ Light activity"
                        android:textSize="12sp"
                        android:textColor="@color/text_tertiary"
                        android:fontFamily="sans-serif"
                        android:letterSpacing="0.02"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <!-- Carbs + Time -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="6dp">

                        <TextView
                            android:id="@+id/tv_meal_carbs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="45g"
                            android:textSize="13sp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" â€¢ "
                            android:textSize="13sp"
                            android:textColor="@color/text_tertiary" />

                        <TextView
                            android:id="@+id/tv_meal_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="14:30"
                            android:textSize="13sp"
                            android:textColor="@color/text_secondary" />

                        <!-- Context Indicators -->
                        <TextView
                            android:id="@+id/tv_indicator_sick"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" ðŸ¤’"
                            android:textSize="14sp"
                            android:visibility="gone"
                            android:layout_marginStart="6dp" />

                        <TextView
                            android:id="@+id/tv_indicator_stress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" ðŸ˜°"
                            android:textSize="14sp"
                            android:visibility="gone" />
                    </LinearLayout>

                </LinearLayout>

                <!-- Dose Badge -->
                <TextView
                    android:id="@+id/tv_header_dose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_dose_badge"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="8dp"
                    tools:text="4.5u"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Expanded Details Section -->
        <LinearLayout
            android:id="@+id/layout_expanded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="@color/expanded_background"
            android:paddingHorizontal="18dp"
            android:paddingBottom="18dp">

            <!-- Warm divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_warm"
                android:layout_marginBottom="16dp" />

            <!-- Context Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:id="@+id/layout_context_glucose"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GLUCOSE"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_tertiary"
                        android:letterSpacing="0.05"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tv_context_glucose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="âœ“ 120 mg/dL"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/text_primary" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_context_activity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ACTIVITY"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_tertiary"
                        android:letterSpacing="0.05"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tv_context_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="ðŸš¶ Light activity"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/text_primary" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_context_modes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="STATUS"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_tertiary"
                        android:letterSpacing="0.05"
                        android:layout_marginBottom="4dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_status_sick"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ¤’ Sick"
                            android:textSize="13sp"
                            android:textColor="#E65100"
                            android:fontFamily="sans-serif-medium"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_status_stress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ˜° Stress"
                            android:textSize="13sp"
                            android:textColor="#F57C00"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginStart="8dp"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_profile_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Missing Profile"
                android:textColor="#D32F2F"
                android:fontFamily="sans-serif-medium"
                android:textSize="12sp"
                android:visibility="gone" />

            <!-- Profile Warning Box -->
            <LinearLayout
                android:id="@+id/layout_profile_warning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFF3E0"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš ï¸"
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Insulin Not Calculated"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#E65100"
                        android:textSize="13sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your medical profile was incomplete when this meal was saved."
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Food List -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FOOD ITEMS"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/text_tertiary"
                android:letterSpacing="0.05"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_food_list_formatted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Rice (150g) ... 35g carbs\nChicken ... 0g carbs"
                android:lineSpacingExtra="6dp"
                android:textSize="13sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="20dp"/>

            <!-- Dose Calculation Receipt -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DOSE CALCULATION"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/text_tertiary"
                android:letterSpacing="0.05"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_receipt_warm"
                android:padding="14dp">

                <!-- Carb Dose -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp">
                    <TextView
                        android:id="@+id/tv_receipt_carb_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Insulin for Food (45g)"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"/>
                    <TextView
                        android:id="@+id/tv_receipt_carb_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        tools:text="4.5u"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/text_primary"/>
                </RelativeLayout>

                <!-- Correction -->
                <RelativeLayout
                    android:id="@+id/row_receipt_correction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Correction"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"/>
                    <TextView
                        android:id="@+id/tv_receipt_correction_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        tools:text="+0.5u"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/dose_correction"/>
                </RelativeLayout>

                <!-- Sick -->
                <RelativeLayout
                    android:id="@+id/row_receipt_sick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ¤’ Sick Day Adj."
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"/>
                    <TextView
                        android:id="@+id/tv_receipt_sick_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        tools:text="+1.2u"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/dose_sick"/>
                </RelativeLayout>

                <!-- Stress -->
                <RelativeLayout
                    android:id="@+id/row_receipt_stress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ˜° Stress Adj."
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"/>
                    <TextView
                        android:id="@+id/tv_receipt_stress_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        tools:text="+0.8u"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/dose_stress"/>
                </RelativeLayout>

                <!-- Exercise -->
                <RelativeLayout
                    android:id="@+id/row_receipt_exercise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸƒ Exercise Adj."
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"/>
                    <TextView
                        android:id="@+id/tv_receipt_exercise_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        tools:text="-0.5u"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/dose_adjustment"/>
                </RelativeLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_warm"
                    android:layout_marginVertical="8dp" />

                <!-- Total -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Final Dose"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/text_primary"/>
                    <TextView
                        android:id="@+id/tv_receipt_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        tools:text="5.2u"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#1976D2"/>
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>