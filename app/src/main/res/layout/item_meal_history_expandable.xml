<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_small"
    android:layout_marginHorizontal="@dimen/spacing_small"
    app:cardCornerRadius="@dimen/corner_radius_card"
    app:cardElevation="@dimen/elevation_card"
    app:cardBackgroundColor="@color/surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Compact Header -->
        <LinearLayout
            android:id="@+id/layout_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_medium"
            android:background="?attr/selectableItemBackground">

            <!-- Top Row: Title + Dose Badge -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Meal Title -->
                    <TextView
                        android:id="@+id/tv_meal_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Banana, Apple"
                        android:textSize="@dimen/text_h3"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/text_primary"
                        android:letterSpacing="0.01"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <!-- NEW: Subtitle with context -->
                    <TextView
                        android:id="@+id/tv_meal_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        tools:text="Good glucose - Light activity"
                        android:textSize="@dimen/text_caption"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="sans-serif"
                        android:letterSpacing="0.02"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <!-- Carbs + Time -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/spacing_small">

                        <TextView
                            android:id="@+id/tv_meal_carbs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="45g"
                            android:textSize="@dimen/text_body2"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" â€¢ "
                            android:textSize="@dimen/text_body2"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tv_meal_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="14:30"
                            android:textSize="@dimen/text_body2"
                            android:textColor="@color/text_secondary" />

                        <!-- Context Indicators -->
                        <TextView
                            android:id="@+id/tv_indicator_sick"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/history_sick_mode"
                            android:visibility="gone"
                            android:textSize="@dimen/text_button"
                            android:layout_marginStart="@dimen/spacing_small" />

                        <TextView
                            android:id="@+id/tv_indicator_stress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/history_high_stress"
                            android:visibility="gone" />
                    </LinearLayout>

                </LinearLayout>

                <!-- Dose Badge -->
                <TextView
                    android:id="@+id/tv_header_dose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_dose_badge"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="8dp"
                    tools:text="4.5u"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Expanded Details Section -->
        <LinearLayout
            android:id="@+id/layout_expanded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="@color/background_secondary"
            android:paddingHorizontal="@dimen/spacing_large"
            android:paddingBottom="@dimen/spacing_large">

            <!-- Warm divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/divider"
                android:layout_marginBottom="@dimen/spacing_medium" />

            <!-- Context Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/spacing_medium">

                <LinearLayout
                    android:id="@+id/layout_context_glucose"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/history_label_glucose"
                        android:textSize="@dimen/text_label"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary"
                        android:letterSpacing="0.05"
                        android:layout_marginBottom="@dimen/spacing_xs"/>

                    <TextView
                        android:id="@+id/tv_context_glucose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="âœ“ 120 mg/dL"
                        android:textSize="@dimen/text_body2"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/text_primary" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_context_activity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/history_label_activity"
                        android:textSize="@dimen/text_label"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary"
                        android:letterSpacing="0.05"
                        android:layout_marginBottom="@dimen/spacing_xs"/>

                    <TextView
                        android:id="@+id/tv_context_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="ðŸš¶ Light activity"
                        android:textSize="@dimen/text_body2"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/text_primary" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_context_modes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/history_label_status"
                        android:textSize="@dimen/text_label"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary"
                        android:letterSpacing="0.05"
                        android:layout_marginBottom="@dimen/spacing_xs"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_status_sick"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/history_status_sick"
                            android:textSize="@dimen/text_body2"
                            android:textColor="@color/status_critical"
                            android:fontFamily="sans-serif-medium"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_status_stress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/history_status_stress"
                            android:textSize="@dimen/text_body2"
                            android:textColor="@color/status_warning"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginStart="@dimen/spacing_small"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_profile_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/history_error_missing_profile"
                android:textColor="@color/status_error"
                android:fontFamily="sans-serif-medium"
                android:textSize="@dimen/text_caption"
                android:visibility="gone" />

            <!-- Profile Warning Box -->
            <LinearLayout
                android:id="@+id/layout_profile_warning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFF3E0"
                android:padding="@dimen/padding_input_horizontal"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš ï¸"
                    android:textSize="@dimen/text_h3"
                    android:layout_marginEnd="@dimen/spacing_small"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/history_error_insulin_not_calc"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#E65100"
                        android:textSize="@dimen/text_caption"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/history_error_profile_incomplete"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginTop="@dimen/spacing_xs"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Food List -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/history_label_food_items"
                android:textSize="@dimen/text_label"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:letterSpacing="0.05"
                android:layout_marginBottom="@dimen/spacing_small"/>

            <TextView
                android:id="@+id/tv_food_list_formatted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Rice (150g) ... 35g carbs\nChicken ... 0g carbs"
                android:lineSpacingExtra="@dimen/spacing_small"
                android:textSize="@dimen/text_body2"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="@dimen/spacing_large"/>

            <!-- Dose Calculation Receipt -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/history_label_dose_calc"
                android:textSize="@dimen/text_label"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:letterSpacing="0.05"
                android:layout_marginBottom="@dimen/spacing_small"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_receipt_warm"
                android:padding="@dimen/padding_card">

                <!-- Carb Dose -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_xs">
                    <TextView
                        android:id="@+id/tv_receipt_carb_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Insulin for Food (45g)"
                        android:textSize="@dimen/text_body2"
                        android:textColor="@color/text_secondary"/>
                    <TextView
                        android:id="@+id/tv_receipt_carb_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        tools:text="4.5u"
                        android:textSize="@dimen/text_body2"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/text_primary"/>
                </RelativeLayout>

                <!-- Correction -->
                <RelativeLayout
                    android:id="@+id/row_receipt_correction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_xs"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/insulin_correction"
                        android:textSize="@dimen/text_body2"
                        android:textColor="@color/text_secondary"/>
                    <TextView
                        android:id="@+id/tv_receipt_correction_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        tools:text="+0.5u"
                        android:textSize="@dimen/text_body2"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/status_warning"/>
                </RelativeLayout>

                <!-- Sick -->
                <RelativeLayout
                    android:id="@+id/row_receipt_sick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_xs"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/history_adj_sick"
                        android:textSize="@dimen/text_body2"
                        android:textColor="@color/text_secondary"/>
                    <TextView
                        android:id="@+id/tv_receipt_sick_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        tools:text="+1.2u"
                        android:textSize="@dimen/text_body2"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/status_critical"/>
                </RelativeLayout>

                <!-- Stress -->
                <RelativeLayout
                    android:id="@+id/row_receipt_stress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_xs"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/history_adj_stress"
                        android:textSize="@dimen/text_body2"
                        android:textColor="@color/text_secondary"/>
                    <TextView
                        android:id="@+id/tv_receipt_stress_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        tools:text="+0.8u"
                        android:textSize="@dimen/text_body2"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/status_warning"/>
                </RelativeLayout>

                <!-- Exercise -->
                <RelativeLayout
                    android:id="@+id/row_receipt_exercise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_xs"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/history_adj_exercise"
                        android:textSize="@dimen/text_body2"
                        android:textColor="@color/text_secondary"/>
                    <TextView
                        android:id="@+id/tv_receipt_exercise_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        tools:text="-0.5u"
                        android:textSize="@dimen/text_body2"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/secondary"/>
                </RelativeLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:background="@color/divider"
                    android:layout_marginVertical="@dimen/spacing_medium" />

                <!-- Total -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/history_final_dose"
                        android:textSize="@dimen/text_body1"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/text_primary"/>
                    <TextView
                        android:id="@+id/tv_receipt_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        tools:text="5.2u"
                        android:textSize="@dimen/text_h3"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/primary"/>
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>