<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header (always visible) - clickable to expand -->
        <LinearLayout
            android:id="@+id/layout_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="?attr/selectableItemBackground">

            <!-- Title row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_meal_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rice and Chicken"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <ImageView
                    android:id="@+id/iv_expand_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/arrow_down_float"
                    android:contentDescription="Expand" />
            </LinearLayout>

            <!-- Details row -->
            <TextView
                android:id="@+id/tv_meal_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="45g carbs  |  4.5 units"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />

            <!-- Time and indicators row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_meal_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today, 13:20"
                    android:textSize="12sp"
                    android:textColor="#999999" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_sick_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¤’"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/tv_stress_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ˜°"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <!-- Expandable details section -->
        <LinearLayout
            android:id="@+id/layout_expanded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp"
            android:background="#FAFAFA">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="12dp" />

            <!-- Food items section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“‹ Food Items"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tv_food_items_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ Rice (150g) - 35g carbs\nâ€¢ Chicken (120g) - 0g carbs"
                android:textSize="13sp"
                android:textColor="#444444"
                android:layout_marginTop="4dp"
                android:lineSpacingExtra="2dp" />

            <!-- Glucose section -->
            <LinearLayout
                android:id="@+id/layout_glucose_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ©¸ Glucose: "
                    android:textSize="13sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/tv_glucose_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="145 mg/dL"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2" />

                <!-- Confidence info -->
                <TextView
                    android:id="@+id/tv_confidence_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Confidence: 85% â€¢ Reference detected âœ“"
                    android:textSize="12sp"
                    android:textColor="#9E9E9E"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Activity section -->
            <LinearLayout
                android:id="@+id/layout_activity_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸƒ Activity: "
                    android:textSize="13sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/tv_activity_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Light exercise"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50" />
            </LinearLayout>

            <!-- Calculation breakdown -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’‰ Dose Calculation"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#666666"
                android:layout_marginTop="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="4dp"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/tv_calc_carb_dose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carb dose: 4.5u"
                    android:textSize="12sp"
                    android:textColor="#444444" />

                <TextView
                    android:id="@+id/tv_calc_correction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correction: +0.5u"
                    android:textSize="12sp"
                    android:textColor="#444444"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_calc_exercise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exercise adj: -0.5u"
                    android:textSize="12sp"
                    android:textColor="#444444"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_calc_final"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Final dose: 4.5u"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>