<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Top bar -->
    <include
        android:id="@+id/top_bar"
        layout="@layout/view_top_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/content_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toTopOf="@id/btn_log_meal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_screen"
            android:clipToPadding="false">

            <!-- ============== SCANNED IMAGE CARD ============== -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/corner_radius_card"
                app:cardElevation="@dimen/elevation_card"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Image container with rounded corners -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/meal_preview_height">

                        <ImageView
                            android:id="@+id/iv_meal_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:contentDescription="@string/content_desc_scanned_meal_image" />

                        <!-- Tap to enlarge hint -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|end"
                            android:layout_margin="@dimen/spacing_small"
                            android:background="@color/overlay_dark"
                            android:paddingHorizontal="@dimen/spacing_small"
                            android:paddingVertical="@dimen/spacing_xs"
                            android:text="@string/action_tap_to_enlarge"
                            android:textColor="@color/text_on_primary"
                            android:textSize="@dimen/text_caption" />

                    </FrameLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ============== DETECTED FOOD CARD ============== -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                app:cardCornerRadius="@dimen/corner_radius_card"
                app:cardElevation="@dimen/elevation_card"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_card">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/scan_detecting_food"
                            android:textSize="@dimen/text_body1"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                        <Button
                            android:id="@+id/btn_edit_meal"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/button_height_small"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:paddingHorizontal="@dimen/padding_input_horizontal"
                            android:text="@string/action_edit"
                            android:textSize="@dimen/text_caption"
                            android:textAllCaps="false"
                            style="@style/Widget.Material3.Button.TextButton" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_meal_items_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/spacing_small" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_height"
                        android:background="@color/divider"
                        android:layout_marginVertical="@dimen/spacing_medium" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/summary_total_carbs"
                            android:textSize="@dimen/text_body1"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/tv_total_carbs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-- g"
                            android:textSize="@dimen/text_h2"
                            android:textStyle="bold"
                            android:textColor="@color/primary" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ============== GLUCOSE INPUT CARD ============== -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                app:cardCornerRadius="@dimen/corner_radius_card"
                app:cardElevation="@dimen/elevation_card"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_card">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/glucose_current"
                        android:textSize="@dimen/text_body1"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/glucose_input_hint"
                        android:textSize="@dimen/text_caption"
                        android:textColor="@color/text_hint"
                        android:layout_marginTop="@dimen/spacing_xs" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/padding_input_horizontal">

                        <EditText
                            android:id="@+id/et_current_glucose"
                            android:layout_width="@dimen/glucose_input_width"
                            android:layout_height="@dimen/input_height_single"
                            android:hint="120"
                            android:inputType="number"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_h3"
                            android:textColor="@color/text_primary"
                            android:background="@drawable/edit_text_background" />

                        <TextView
                            android:id="@+id/tv_glucose_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/unit_mgdl"
                            android:textSize="@dimen/text_body1"
                            android:textColor="@color/text_secondary"
                            android:layout_marginStart="@dimen/spacing_medium" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tv_glucose_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="@dimen/text_body2"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ============== ACTIVITY LEVEL CARD ============== -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_input_horizontal"
                app:cardCornerRadius="@dimen/corner_radius_card"
                app:cardElevation="@dimen/elevation_card"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_card">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/activity_level_title"
                        android:textSize="@dimen/text_body1"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/activity_level_desc"
                        android:textSize="@dimen/text_caption"
                        android:textColor="@color/text_hint"
                        android:layout_marginTop="@dimen/spacing_xxs" />

                    <RadioGroup
                        android:id="@+id/rg_activity_level"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/padding_input_horizontal">

                        <RadioButton
                            android:id="@+id/rb_activity_normal"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/radio_button_height"
                            android:text="@string/activity_normal_desc"
                            android:textSize="@dimen/text_body1"
                            android:checked="true" />

                        <RadioButton
                            android:id="@+id/rb_activity_light"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/radio_button_height"
                            android:text="@string/activity_light_desc"
                            android:textSize="@dimen/text_body1" />

                        <RadioButton
                            android:id="@+id/rb_activity_intense"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/radio_button_height"
                            android:text="@string/activity_intense_desc"
                            android:textSize="@dimen/text_body1" />

                    </RadioGroup>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ============== ACTIVE INSULIN CARD ============== -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_input_horizontal"
                app:cardCornerRadius="@dimen/corner_radius_card"
                app:cardElevation="@dimen/elevation_card"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_card">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/summary_active_insulin_title"
                        android:textSize="@dimen/text_body1"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/summary_active_insulin_desc"
                        android:textSize="@dimen/text_caption"
                        android:textColor="@color/text_hint"
                        android:layout_marginTop="@dimen/spacing_xxs" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/padding_input_horizontal">

                        <EditText
                            android:id="@+id/et_active_insulin"
                            android:layout_width="@dimen/glucose_input_width"
                            android:layout_height="@dimen/input_height_single"
                            android:hint="0.0"
                            android:inputType="numberDecimal"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_h3"
                            android:background="@drawable/edit_text_background" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/unit_units"
                            android:textSize="@dimen/text_body1"
                            android:textColor="@color/text_secondary"
                            android:layout_marginStart="@dimen/padding_input_horizontal" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ============== DOSE CALCULATION CARD ============== -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                app:cardCornerRadius="@dimen/corner_radius_card"
                app:cardElevation="@dimen/elevation_card"
                app:cardBackgroundColor="@color/primary_very_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_card">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/insulin_dose"
                        android:textSize="@dimen/text_body1"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/padding_input_horizontal">

                        <!-- Carb dose row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/spacing_small">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/insulin_carb_dose"
                                android:textSize="@dimen/text_body1"
                                android:textColor="@color/text_primary" />

                            <TextView
                                android:id="@+id/tv_carb_dose"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.0 u"
                                android:textSize="@dimen/text_body1"
                                android:textColor="@color/text_primary" />

                        </LinearLayout>

                        <!-- Correction dose row -->
                        <LinearLayout
                            android:id="@+id/layout_correction_dose"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/spacing_small"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/insulin_correction"
                                android:textSize="@dimen/text_body1"
                                android:textColor="@color/text_primary" />

                            <TextView
                                android:id="@+id/tv_correction_dose"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+0.0 u"
                                android:textSize="@dimen/text_body1"
                                android:textColor="@color/status_warning" />

                        </LinearLayout>

                        <!-- Sick adjustment row -->
                        <LinearLayout
                            android:id="@+id/layout_sick_adjustment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/spacing_small"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tv_sick_label"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/insulin_sick_mode"
                                android:textSize="@dimen/text_body1"
                                android:textColor="@color/text_primary" />

                            <TextView
                                android:id="@+id/tv_sick_adjustment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+0.0 u"
                                android:textSize="@dimen/text_body1"
                                android:textColor="@color/status_warning" />

                        </LinearLayout>

                        <!-- Stress adjustment row -->
                        <LinearLayout
                            android:id="@+id/layout_stress_adjustment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/spacing_small"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tv_stress_label"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/insulin_stress_mode"
                                android:textSize="@dimen/text_body1"
                                android:textColor="@color/text_primary" />

                            <TextView
                                android:id="@+id/tv_stress_adjustment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+0.0 u"
                                android:textSize="@dimen/text_body1"
                                android:textColor="@color/status_warning" />

                        </LinearLayout>

                        <!-- Exercise adjustment row -->
                        <LinearLayout
                            android:id="@+id/layout_exercise_adjustment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/spacing_small"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tv_exercise_label"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/insulin_exercise_mode"
                                android:textSize="@dimen/text_body1"
                                android:textColor="@color/text_primary" />

                            <TextView
                                android:id="@+id/tv_exercise_adjustment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-0.0 u"
                                android:textSize="@dimen/text_body1"
                                android:textColor="@color/status_normal" />

                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/divider_height"
                            android:background="@color/primary_light"
                            android:layout_marginVertical="@dimen/spacing_medium" />

                        <!-- Final dose row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/insulin_recommended_dose"
                                android:textSize="@dimen/text_h3"
                                android:textStyle="bold"
                                android:textColor="@color/primary_dark" />

                            <TextView
                                android:id="@+id/tv_final_dose"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.0 u"
                                android:textSize="@dimen/text_h1"
                                android:textStyle="bold"
                                android:textColor="@color/primary_dark" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ============== ANALYSIS RESULTS CARD ============== -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_analysis_results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/corner_radius_card"
                app:cardElevation="@dimen/elevation_card"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_card">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/summary_portion_analysis"
                        android:textSize="@dimen/text_body1"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <LinearLayout
                        android:id="@+id/layout_analysis_results"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/padding_input_horizontal">

                        <TextView
                            android:id="@+id/tv_portion_weight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/summary_est_weight"
                            android:textSize="@dimen/text_body2"
                            android:textColor="@color/text_secondary"
                            android:paddingVertical="@dimen/spacing_xxs" />

                        <TextView
                            android:id="@+id/tv_plate_dimensions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/summary_plate"
                            android:textSize="@dimen/text_body2"
                            android:textColor="@color/text_secondary"
                            android:paddingVertical="@dimen/spacing_xxs" />

                        <TextView
                            android:id="@+id/tv_analysis_confidence"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/summary_confidence"
                            android:textSize="@dimen/text_body2"
                            android:textColor="@color/text_secondary"
                            android:paddingVertical="@dimen/spacing_xxs" />

                        <TextView
                            android:id="@+id/tv_reference_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/summary_reference_object"
                            android:textSize="@dimen/text_body2"
                            android:textColor="@color/text_secondary"
                            android:paddingVertical="@dimen/spacing_xxs" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Save button -->
    <Button
        android:id="@+id/btn_log_meal"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height_large"
        android:text="@string/scan_confirm_save"
        android:textSize="@dimen/text_button"
        android:textAllCaps="false"
        android:textColor="@color/text_on_primary"
        android:background="@drawable/button_primary"
        android:layout_marginStart="@dimen/spacing_medium"
        android:layout_marginEnd="@dimen/spacing_medium"
        android:layout_marginBottom="@dimen/spacing_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="content_scroll_view,btn_log_meal" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/layout_empty_state"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="@dimen/spacing_xl">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ½ï¸"
            android:textSize="@dimen/text_emoji_large"
            android:layout_marginBottom="@dimen/spacing_medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_state_humor"
            android:textSize="@dimen/text_h2"
            android:textColor="@color/text_secondary"
            android:textAlignment="center"
            android:lineSpacingExtra="4dp"
            android:textStyle="italic"
            android:layout_marginBottom="@dimen/spacing_large"/>

        <Button
            android:id="@+id/btn_scan_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_scan"
            android:textSize="@dimen/text_button"
            android:textColor="@color/text_on_primary"
            android:background="@drawable/button_primary"
            android:paddingHorizontal="@dimen/spacing_xl"
            android:paddingVertical="@dimen/spacing_medium"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>