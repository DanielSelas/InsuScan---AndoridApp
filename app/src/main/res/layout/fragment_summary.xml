<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Top bar -->
    <include
        android:id="@+id/top_bar"
        layout="@layout/view_top_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toTopOf="@id/btn_log_meal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ============== DETECTED FOOD CARD ============== -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ½ï¸ Detected Food"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/tv_meal_items"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Detected items will appear here"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/tv_total_carbs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total carbs: -- g"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2"
                        android:layout_marginTop="12dp" />

                    <!-- Edit button -->
                    <Button
                        android:id="@+id/btn_edit_meal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœï¸ Edit Items"
                        android:textAllCaps="false"
                        android:layout_marginTop="8dp"
                        style="@style/Widget.Material3.Button.TextButton" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ============== GLUCOSE INPUT CARD ============== -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ©¸ Current Glucose (optional)"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#666666" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="8dp">

                        <EditText
                            android:id="@+id/et_current_glucose"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:hint="120"
                            android:inputType="number"
                            android:textAlignment="center"
                            android:background="@drawable/edit_text_background" />

                        <TextView
                            android:id="@+id/tv_glucose_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="mg/dL"
                            android:textSize="16sp"
                            android:layout_marginStart="8dp" />

                        <TextView
                            android:id="@+id/tv_glucose_status"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textSize="13sp"
                            android:textAlignment="textEnd"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enter to include correction dose"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:layout_marginTop="4dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ============== ACTIVITY LEVEL CARD ============== -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸƒ Activity Level (this meal)"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#666666" />

                    <RadioGroup
                        android:id="@+id/rg_activity_level"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp">

                        <RadioButton
                            android:id="@+id/rb_activity_normal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Normal (no adjustment)"
                            android:checked="true"
                            android:paddingVertical="4dp" />

                        <RadioButton
                            android:id="@+id/rb_activity_light"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="After light exercise"
                            android:paddingVertical="4dp" />

                        <RadioButton
                            android:id="@+id/rb_activity_intense"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="After intense exercise"
                            android:paddingVertical="4dp" />

                    </RadioGroup>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ============== DOSE CALCULATION CARD ============== -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_dose_calculation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#E3F2FD">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’‰ Insulin Calculation"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#1565C0" />

                    <!-- Carb dose -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Carb dose"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_carb_dose"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0 u"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <!-- Correction dose -->
                    <LinearLayout
                        android:id="@+id/layout_correction_dose"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_correction_label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Correction"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_correction_dose"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+0.0 u"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <!-- Sick day adjustment -->
                    <LinearLayout
                        android:id="@+id/layout_sick_adjustment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_sick_label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ¤’ Sick day"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_sick_adjustment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+0.0 u"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <!-- Stress adjustment -->
                    <LinearLayout
                        android:id="@+id/layout_stress_adjustment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_stress_label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ˜° Stress"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_stress_adjustment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+0.0 u"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <!-- Exercise adjustment -->
                    <LinearLayout
                        android:id="@+id/layout_exercise_adjustment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_exercise_label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸƒ Exercise"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_exercise_adjustment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-0.0 u"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#90CAF9"
                        android:layout_marginVertical="12dp" />

                    <!-- Final dose -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Recommended dose"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#1565C0" />

                        <TextView
                            android:id="@+id/tv_final_dose"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0 u"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#1565C0" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ============== ANALYSIS RESULTS (collapsible) ============== -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_analysis_results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š Portion Analysis"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#666666" />

                    <LinearLayout
                        android:id="@+id/layout_analysis_results"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/tv_portion_weight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estimated weight: --"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_plate_dimensions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Plate: --"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:id="@+id/tv_analysis_confidence"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Confidence: --"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:id="@+id/tv_reference_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reference object: --"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Save button - fixed at bottom -->
    <Button
        android:id="@+id/btn_log_meal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="âœ“ Confirm &amp; Save"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>