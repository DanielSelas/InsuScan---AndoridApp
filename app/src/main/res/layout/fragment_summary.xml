<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top bar (back button + centered title) -->
    <include
        android:id="@+id/top_bar"
        layout="@layout/view_top_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <FrameLayout
        android:id="@+id/summary_header_container"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_meal_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:alpha="0.25"
            android:contentDescription="Meal photo"
            android:src="@drawable/ic_meal_placeholder" />

        <LinearLayout
            android:id="@+id/ll_detected_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_detected_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detected food"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_meal_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detected items will appear here"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:maxLines="3" />
        </LinearLayout>
    </FrameLayout>

    <Button
        android:id="@+id/btn_calculate_insulin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Calculate"
        app:layout_constraintTop_toBottomOf="@id/summary_header_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_edit_meal"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_edit_meal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Edit"
        app:layout_constraintTop_toTopOf="@id/btn_calculate_insulin"
        app:layout_constraintBottom_toBottomOf="@id/btn_calculate_insulin"
        app:layout_constraintStart_toEndOf="@id/btn_calculate_insulin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="24dp" />

    <TextView
        android:id="@+id/tv_total_carbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total carbs: "
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/btn_calculate_insulin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Analysis Results Section -->
    <LinearLayout
        android:id="@+id/layout_analysis_results"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:background="#F0F0F0"
        app:layout_constraintTop_toBottomOf="@id/tv_total_carbs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_analysis_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Portion Analysis"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_portion_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estimated weight: --"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tv_plate_dimensions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plate: -- cm diameter, -- cm depth"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tv_analysis_confidence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confidence: --%"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tv_reference_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reference object: --"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_log_meal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save meal and go to history"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>